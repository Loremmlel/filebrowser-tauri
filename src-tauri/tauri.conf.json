{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "filebrowser-tauri",
  "version": "0.1.0",
  "identifier": "tenshi.hinanawi.filebrowser",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "filebrowser-tauri",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost data: blob: http: https:",
        "img-src": "'self' asset: http://asset.localhost data: blob: http: https:",
        "media-src": "'self' asset: http://asset.localhost data: blob: http: https:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
